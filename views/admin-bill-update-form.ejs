<%- include('./admin-sidebar') -%>

<div class="container" style="margin-left: 250px; max-width: 25%; font-size: 3rem;">
    <h1><%= formTitle %></h1>
    <form action="<%= postLink %>" method="post" style="font-size: 2rem;">
      <div class="form-group">
        <label for="id">ID</label>
        <input class="form-control" id="id" placeholder="Enter ID" name="ID" 
        value="<%= (typeof list !== 'undefined') ? list.ID : '' %>" readonly>
      </div>

      
      <% if(typeof list !== 'undefined') { %>
        <div class="form-group">
          <label for="id">Room Charge</label>
          <input class="form-control" id="id" name="ROOM_CHARGE" 
          value="<%= list.ROOM_CHARGE %>" required>
        </div>

        <div class="form-group">
            <label for="id">Medicine Charge</label>
            <input class="form-control" id="id" name="MEDICINE_CHARGE" 
            value="<%= list.MEDICINE_CHARGE %>" required>
          </div>

          <div class="form-group">
            <label for="id">Treatment Charge</label>
            <input class="form-control" id="id" name="TREATMENT_CHARGE" 
            value="<%= list.TREATMENT_CHARGE %>" required>
          </div>
      <% } %>

